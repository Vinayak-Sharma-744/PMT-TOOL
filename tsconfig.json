{
  "compilerOptions": {
    "skipLibCheck": true,
    "removeComments": true,
    "strict": true,

    "target": "ES2021",
    "lib": ["ES2021"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noImplicitAny": true,
    "types": ["node"],

    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": false
  },
  "ts-node": {
    "esm": true
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["src/test"]
}
